{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build with MSVC",
			"command": "cmd",
			"args": [
				"/c",
				"call \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\" && cl.exe",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${fileDirname}\\Build\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$msCompile"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}
