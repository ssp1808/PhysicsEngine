{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build with MSVC",
            "command": "cmd",
            "args": [
                "/c",
                "call \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2022\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\" &&",
                "cl.exe",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I", "${workspaceFolder}/GUI/Headers",
                "/I", "${workspaceFolder}/Math/Headers",
                "/I", "${workspaceFolder}/Object/Headers",
                "/Fe${workspaceFolder}/Build/PhysicsEngine.exe",
                "${workspaceFolder}/Main.cpp",
				"${workspaceFolder}/GUI/Classes/*.cpp",
                "${workspaceFolder}/Math/Classes/*.cpp",
                "${workspaceFolder}/Object/Classes/*.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe"
        }
    ]
}
